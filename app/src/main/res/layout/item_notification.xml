<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/iv_app_icon"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/tv_notification_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:layout_toEndOf="@id/iv_app_icon"
        android:layout_below="@id/tv_app_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/tv_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:layout_alignBottom="@id/tv_app_name"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:textColor="#888888"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tv_notification_message"
        android:layout_below="@id/tv_notification_time"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        android:textColor="#888888"
        android:singleLine="true"/>
</RelativeLayout>